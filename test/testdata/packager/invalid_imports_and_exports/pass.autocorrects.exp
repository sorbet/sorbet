# frozen_string_literal: true
# typed: strict

# Despite A having invalid imports, B should still typecheck fine.

class B < PackageSpec
  import A
  export B::BClass
  export B::BModule
end
# ------------------------------
# -- test/testdata/packager/invalid_imports_and_exports/b/b.rb --
# frozen_string_literal: true
# typed: strict

module B
  class BClass
    extend T::Sig

    sig {returns(Integer)}
    def get_one
      A::AModule.one
    end
  end

  module BModule
    extend T::Sig

    sig {returns(A::AClass)}
    def self.get_a
      A::AClass.new
    end
  end
end
